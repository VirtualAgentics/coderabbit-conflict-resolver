{
  "model": "claude-4-5-sonnet",
  "workingDirectory": ".",
  "environment": {
    "PYTHONUNBUFFERED": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PYTHONPATH": "src"
  },
  "preRunCommands": [
    "test -d .venv && source .venv/bin/activate || true"
  ],
  "permissions": {
    "allowedTools": [
      "Read",
      "Edit",
      "Grep",
      "Glob",
      "Bash(git:*)",
      "Bash(make:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(mypy:*)",
      "Bash(ruff:*)",
      "Bash(black:*)",
      "Bash(bandit:*)",
      "Bash(safety:*)",
      "Bash(pre-commit:*)",
      "Bash(sphinx:*)",
      "Bash(coderabbit:*)"
    ],
    "deniedCommands": [
      "Bash(sudo:*)",
      "Bash(pip:--break-system-packages*)",
      "Bash(git:*--no-verify*)"
    ],
    "allowedPaths": [
      "src/**",
      "tests/**",
      "docs/**",
      "Makefile",
      "pyproject.toml",
      "requirements*.txt",
      ".venv/**",
      ".claude/**",
      ".cursor/**"
    ]
  },
  "defaults": {
    "shellTimeoutMs": 600000,
    "confirmWrites": false,
    "confirmExecutes": false
  },
  "commandTemplates": {
    "python": "source .venv/bin/activate && python {{args}}",
    "pip": "source .venv/bin/activate && pip {{args}}",
    "pytest": "source .venv/bin/activate && pytest {{args}}",
    "mypy": "source .venv/bin/activate && mypy {{args}}",
    "ruff": "source .venv/bin/activate && ruff {{args}}",
    "black": "source .venv/bin/activate && black {{args}}",
    "bandit": "source .venv/bin/activate && bandit {{args}}",
    "safety": "source .venv/bin/activate && safety {{args}}",
    "make": "source .venv/bin/activate && make {{args}}",
    "coderabbit": "coderabbit {{args}}"
  }
}
